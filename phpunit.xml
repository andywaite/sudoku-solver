<?xml version="1.0" encoding="utf-8"?>
<phpunit bootstrap="vendor/autoload.php" >
    <testsuites>
        <testsuite name="unit-test">
            <directory suffix=".php">test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory>src/</directory>
        </whitelist>
    </filter>
</phpunit>
